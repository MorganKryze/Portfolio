---
import "../styles/global.css";
import "../animations/hide.astro";

import MainLayout from "../layouts/MainLayout.astro";
import Card from "../components/Card.astro";
import Spacer from "../components/Spacer.astro";
---

<MainLayout currentPage="home">
  <main class="text-white min-h-screen">
    <div class="flex justify-center items-center h-screen">
      <h1 class="text-5xl hide-5">Welcome to my Universe</h1>
    </div>

    <Spacer size="h-48" />

    <div class="flex justify-center items-center">
      <h1 class="text-5xl hide-3">See collections</h1>
    </div>

    <Spacer size="h-24" />

    <div
      class="hide-3 flex flex-col md:flex-row space-y-6 md:space-y-0 md:space-x-6 px-4 md:px-16"
    >
      <Card
        image="/Portfolio/img/france/im31.jpg"
        title="France"
        url="/Portfolio/collections/france"
      />
      <Card
        image="/Portfolio/img/sardegna/im6.jpg"
        title="Sardegna"
        url="/Portfolio/collections/sardegna"
      />
      <Card
        image="/Portfolio/img/ireland/im64.jpg"
        title="Ireland"
        url="/Portfolio/collections/ireland"
      />
    </div>

    <Spacer size="h-96" />

    <div class="flex justify-center items-center">
      <h1 class="text-5xl hide-3">Get in touch</h1>
    </div>

    <Spacer size="h-24" />

    <div class="flex justify-center items-center mt-4">
      <p class="text-lg text-center hide-3">
        I'd love to hear from you. Feel free to reach out to me at <a
          href="mailto:morgan@kodelab.fr"
          style="color: hsl(195, 60%, 60%);">morgan@kodelab.fr</a
        >.
      </p>
    </div>

    <Spacer size="h-72" />
  </main>
</MainLayout>
