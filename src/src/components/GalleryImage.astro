---
import "../styles/global.css";
import "../animations/hide.astro";

interface Props {
  image: string;
  loading?: 'lazy' | 'eager';
}

const { image, loading = 'lazy' } = Astro.props;
---

<img
  src={`/Portfolio${image}`}
  alt="gallery"
  class="w-full object-cover rounded-md hide-2"
  loading={loading}
/>